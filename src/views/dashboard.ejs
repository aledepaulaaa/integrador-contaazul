<!-- ARQUIVO: /src/views/dashboard.ejs -->
<div class="glass-card p-4">
    <h1 class="mb-4">Bem-vindo ao Integrador Conta Azul</h1>

    <!-- Filtros -->
    <div class="mb-4">
        <div class="row g-2 align-items-center">
            <!-- Seletor de Entidade Principal -->
            <div class="col-12 col-md-3">
                <select id="filter-entity" class="form-select">
                    <option value="vendas">Vendas</option>
                    <option value="pessoas">Pessoas</option>
                    <option value="produtos">Produtos</option>
                    <!-- <option value="notas">Notas Fiscais</option>
                    <option value="financeiro">Financeiro</option> -->
                </select>
            </div>

            <!-- Container para Filtros Dinâmicos -->
            <div class="col-12 col-md-6">
                <div class="row g-2" id="dynamic-filters-container">
                    <!-- Filtros de Data (visível por padrão) -->
                    <div class="col-12 col-md-6 filter-control" id="date-filters">
                        <input type="date" id="filter-startDate" class="form-control">
                    </div>
                    <div class="col-12 col-md-6 filter-control" id="date-filters-end">
                        <input type="date" id="filter-endDate" class="form-control">
                    </div>

                    <!-- Filtros para Financeiro (escondido) -->
                    <div class="col-12 col-md-4 filter-control" id="finance-subtype-wrapper" style="display: none;">
                        <select id="finance-subtype" class="form-select">
                            <option value="baixas">Baixas por ID</option>
                            <option value="cobrancas">Cobranças por ID</option>
                            <option value="centro_de_custos">Centro de Custos</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-8 filter-control" id="finance-id-wrapper" style="display: none;">
                        <input type="text" id="finance-id-filter" class="form-control" placeholder="Digite o ID...">
                    </div>

                    <!-- Filtros para Centro de Custos (escondido) -->
                    <div class="col-12 col-md-4 filter-control" id="cost-center-status-wrapper" style="display: none;">
                        <select id="cost-center-status" class="form-select">
                            <option value="ATIVO">Ativos</option>
                            <option value="INATIVO">Inativos</option>
                            <option value="TODOS">Todos</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-8 filter-control" id="cost-center-search-wrapper" style="display: none;">
                        <input type="text" id="cost-center-search" class="form-control"
                            placeholder="Buscar por nome ou código...">
                    </div>
                </div>
            </div>

            <!-- Botões -->
            <div class="col-12 col-md-3">
                <div class="d-grid gap-2 d-md-flex">
                    <button id="btn-buscar-dados" class="btn btn-glass w-100">Buscar Dados</button>
                    <button id="btn-mostrar-historico" class="btn btn-glass w-100">Histórico</button>
                </div>
            </div>
        </div>
    </div>

    <div id="output" class="mt-4"></div>

    <div id="data-container" class="glass-card p-3 mt-4" style="display: none;">
        <div class="d-flex justify-content-end align-items-center mb-3 flex-wrap gap-2">
            <div>
                <button id="btn-export-pdf" class="btn btn-glass">Exportar PDF</button>
                <button id="btn-export-excel" class="btn btn-glass">Exportar Excel</button>
            </div>
        </div>
        <div class="table-responsive">
            <table id="interactive-table" class="table table-dark table-hover" style="width:100%"></table>
        </div>
    </div>
</div>

<!-- Modal para Detalhes de Baixas (Fullscreen) -->
<div class="modal fade" id="details-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="details-modal-title">Detalhes do Item</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body" id="details-modal-body">
                <!-- Conteúdo dinâmico será inserido aqui -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Impressão -->
<div class="modal fade" id="print-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="print-modal-title">Visualização de Impressão</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body" id="print-modal-body">
                <!-- O conteúdo do documento gerado será inserido aqui -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" id="btn-confirm-print" class="btn btn-primary">Imprimir</button>
            </div>
        </div>
    </div>
</div>

<!-- NOVO MODAL PARA EDIÇÃO ANTES DA IMPRESSÃO -->
<div class="modal fade" id="edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="edit-modal-title">Editar Documento</h5><button type="button"
                    class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="edit-form">
                    <!-- Campos Comuns -->
                    <div class="mb-3">
                        <label for="edit-header" class="form-label">Cabeçalho</label>
                        <textarea class="form-control" id="edit-header" rows="4"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="edit-footer" class="form-label">Rodapé (Texto de Reconhecimento)</label>
                        <textarea class="form-control" id="edit-footer" rows="4"></textarea>
                    </div>

                    <!-- Campos Específicos do Condicional -->
                    <div id="condicional-fields">
                        <div class="mb-3">
                            <label for="edit-prazo" class="form-label">Prazo de Devolução</label>
                            <input type="text" class="form-control" id="edit-prazo">
                        </div>
                        <div class="mb-3">
                            <label for="edit-modalidade" class="form-label">Modalidade</label>
                            <input type="text" class="form-control" id="edit-modalidade">
                        </div>
                        <div class="mb-3">
                            <label for="edit-vencimento" class="form-label">Vencimento</label>
                            <input type="date" class="form-control" id="edit-vencimento">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" id="btn-save-and-print" class="btn btn-success">Salvar e Visualizar</button>
            </div>
        </div>
    </div>
</div>